<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="5"
    android:layout_column="4"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/btnCA"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="borrar"
            android:text="CA"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="BotonPrueba"
            android:text="C"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="%"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEntre"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="/"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="7"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="8"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="9"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnPor"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="X"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="4"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="5"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="6"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnMenos"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="-"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="1"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="2"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="3"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnMas"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"

            android:layout_margin="3dp"
            android:onClick="cambiarOperador"
            android:text="+"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="0"
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="#fff"

            android:onClick="seleccionarNumero"
            android:text="."
            android:textColor="#673AB7"
            android:textSize="24sp"
            app:strokeColor="#673AB7"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"

            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:onClick="igual"
            android:text="="
            android:textSize="24sp" />

    </GridLayout>
</LinearLayout>